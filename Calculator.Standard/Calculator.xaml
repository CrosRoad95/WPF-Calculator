<UserControl x:Class="Calculator.Standard.Calculator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calculator.Standard"
             mc:Ignorable="d"
             d:Height="566"
             d:Width="322">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0">
            <Label Content="" x:Name="Input" Foreground="#939295" FontSize="24" HorizontalAlignment="Right" Margin="0,0,10,0"></Label>
            <Label Content="0" x:Name="Output" Foreground="White" FontSize="48" HorizontalAlignment="Right" Margin="0,0,10,0"></Label>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border CornerRadius="10" Margin="1" Background="#323232" Grid.Column="2" Grid.Row="0">
                <Button Content="C" Tag="C" FontSize="36" Background="Transparent" Foreground="White" BorderBrush="Transparent" Click="Input_Click"/>
            </Border>
            <Border CornerRadius="10" Margin="1" Background="#323232" Grid.Column="3" Grid.Row="0">
                <Button Content="/" Tag="/" FontSize="36" Background="Transparent" Foreground="White" BorderBrush="Transparent" Click="Input_Click"/>
            </Border>
            <Border CornerRadius="10" Margin="1" Background="#323232" Grid.Column="3" Grid.Row="1">
                <Button Content="X" Tag="*" FontSize="36" Background="Transparent" Foreground="White" BorderBrush="Transparent" Click="Input_Click"/>
            </Border>
            <Border CornerRadius="10" Margin="1" Background="#323232" Grid.Column="3" Grid.Row="2">
                <Button Content="-" Tag="-" FontSize="36" Background="Transparent" Foreground="White" BorderBrush="Transparent" Click="Input_Click"/>
            </Border>
            <Border CornerRadius="10" Margin="1" Background="#323232" Grid.Column="3" Grid.Row="3">
                <Button Content="+" Tag="+" FontSize="36" Background="Transparent" Foreground="White" BorderBrush="Transparent" Click="Input_Click"/>
            </Border>
            <Border CornerRadius="10" Margin="1" Background="#3B3B3B" Grid.Column="0" Grid.Row="1">
                <Button Content="7" Tag="7" FontSize="36" Background="Transparent" Foreground="White" BorderBrush="Transparent" Click="Input_Click"/>
            </Border>
            <Border CornerRadius="10" Margin="1" Background="#3B3B3B" Grid.Column="1" Grid.Row="1">
                <Button Content="8" Tag="8" FontSize="36" Background="Transparent" Foreground="White" BorderBrush="Transparent" Click="Input_Click"/>
            </Border>
            <Border CornerRadius="10" Margin="1" Background="#3B3B3B" Grid.Column="2" Grid.Row="1">
                <Button Content="9" Tag="9" FontSize="36" Background="Transparent" Foreground="White" BorderBrush="Transparent" Click="Input_Click"/>
            </Border>
            <Border CornerRadius="10" Margin="1" Background="#3B3B3B" Grid.Column="0" Grid.Row="3">
                <Button Content="1"  Tag="1" FontSize="36" Background="Transparent" Foreground="White" BorderBrush="Transparent" Click="Input_Click"/>
            </Border>
            <Border CornerRadius="10" Margin="1" Background="#3B3B3B" Grid.Column="1" Grid.Row="3">
                <Button Content="2" Tag="2" FontSize="36" Background="Transparent" Foreground="White" BorderBrush="Transparent" Click="Input_Click"/>
            </Border>
            <Border CornerRadius="10" Margin="1" Background="#3B3B3B" Grid.Column="2" Grid.Row="3">
                <Button Content="3" Tag="3" FontSize="36" Background="Transparent" Foreground="White" BorderBrush="Transparent" Click="Input_Click"/>
            </Border>
            <Border CornerRadius="10" Margin="1" Background="#3B3B3B" Grid.Column="0" Grid.Row="2">
                <Button Content="4" Tag="4" FontSize="36" Background="Transparent" Foreground="White" BorderBrush="Transparent" Click="Input_Click"/>
            </Border>
            <Border CornerRadius="10" Margin="1" Background="#3B3B3B" Grid.Column="1" Grid.Row="2">
                <Button Content="5"  Tag="5" FontSize="36" Background="Transparent" Foreground="White" BorderBrush="Transparent" Click="Input_Click"/>
            </Border>
            <Border CornerRadius="10" Margin="1" Background="#3B3B3B" Grid.Column="2" Grid.Row="2">
                <Button Content="6"  Tag="6" FontSize="36" Background="Transparent" Foreground="White" BorderBrush="Transparent" Click="Input_Click"/>
            </Border>
            <Border CornerRadius="10" Margin="1" Background="#4CC2FF" Grid.Column="3" Grid.Row="4">
                <Button Content="="  Tag="=" FontSize="36" Background="Transparent" Foreground="Black" BorderBrush="Transparent" Click="Input_Click"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
